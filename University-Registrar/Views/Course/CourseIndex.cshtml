@{
  Layout = "_Layout";
}

<div class="container">
  @if (Model.Count != 0)
  {
    <ul>
      @foreach (var course in Model)
      {
        <li><a href= "/courses/@course.GetId()">  @course.GetName()</a> ||
        <a href="/course/@course.GetId()/update"> Edit</a> || <a href="/course/@course.GetId()/delete"> Delete</a></li>
      }
    </ul>
  }
  <br>
  <hr>
  <h4><a href="/courses/new"> Add New Course </a></h4>
  <hr>
  <h4><a href="/"> Home </a></h4>
  <hr>
</div>
